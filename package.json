{
  "name": "node-fastify-react-radix-scaffold",
  "version": "0.4.0",
  "description": "Node fastify Prisma scaffold",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:browser && npm run build:server",
    "build:browser": "vite build",
    "build:server": "tsc --project src/server/tsconfig.json",
    "clean": "rimraf dist",
    "husky:pre-push": "npm test",
    "husky:pre-commit": "npx --no lint-staged",
    "husky:commit-msg": "npx --no commitlint -- --edit",
    "start:server": "node --env-file=.env ./dist/index.js",
    "start:browser": "vite dev",
    "watch:build:server": "npm run build:server -- --watch --incremental --sourceMap --preserveWatchOutput",
    "test": "vitest run",
    "prepare": "npm run clean && npx --no prisma generate && npm run build && npx --no husky"
  },
  "keywords": [
    "node",
    "short-link"
  ],
  "author": "Han Jiawei",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.0.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.10.1",
    "connect-redis": "^9.0.0",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@radix-ui/themes": "^3.2.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-table": "^8.21.3",
    "@testing-library/react": "^16.3.0",
    "@types/express-session": "^1.18.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.6.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "jotai": "^2.12.5",
    "ky": "^1.8.1",
    "lint-staged": "^16.1.2",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "prisma": "^6.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "15.5.3",
    "react-router": "^7.6.3",
    "rimraf": "^6.0.1",
    "sortier": "^2.1.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "7.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  }
}
