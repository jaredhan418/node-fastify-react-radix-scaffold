{
  "name": "node-short-link",
  "version": "0.1.0",
  "description": "Node Short link service",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:browser && npm run build:server",
    "build:browser": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "clean": "rimraf dist",
    "husky:pre-push": "npm test",
    "husky:pre-commit": "npx --no lint-staged",
    "start:server": "node -r dotenv/config ./dist/server/index.js",
    "watch:build:server": "npm run build:server -- --watch --incremental --sourceMap --preserveWatchOutput",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepare": "npm run clean && npx --no prisma generate && npm run build && npx --no husky install"
  },
  "keywords": [
    "node",
    "short-link"
  ],
  "author": "Han Jiawei",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openapi": "^12.1.3",
    "express-session": "^1.17.3",
    "i18next": "^23.2.11",
    "mime": "^3.0.0",
    "pino-http": "^8.4.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@fluentui/react-components": "^9.28.1",
    "@testing-library/react": "^14.0.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/mime": "^3.0.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "ky": "^0.33.3",
    "lint-staged": "^14.0.0",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.0",
    "prisma": "^5.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "sortier": "^2.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  },
  "engines": {
    "node": ">=18.15.0",
    "npm": ">=9.0.0"
  }
}
